<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="customer_account_navigation">
            <block class="Magento\Customer\Block\Account\SortLinkInterface"
                   name="customer-account-navigation-notes-link">
                <arguments>
                    <argument name="path" xsi:type="string">notes</argument>
                    <argument name="label" xsi:type="string" translate="true">My Notes</argument>
                    <argument name="sortOrder" xsi:type="number">216</argument>
                </arguments>
            </block>
        </referenceBlock>
        <!-- "Address Book" link -->
        <referenceBlock name="customer-account-navigation-address-link" remove="true"/>
    </body>
</page>
