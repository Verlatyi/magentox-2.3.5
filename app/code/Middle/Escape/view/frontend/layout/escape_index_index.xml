<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="page.main.title">
            <action method="setPageTitle">
                <argument translate="true" name="title" xsi:type="string">My Page</argument>
            </action>
        </referenceBlock>
        <referenceContainer name="content" htmlTag="div" htmlClass="content-container" htmlId="IdContentContainer">
            <block class="Middle\Escape\Block\CustomEscape" name="middle.escape" as="escape.block" template="Middle_Escape::custom_escape.phtml">
            </block>
        </referenceContainer>

    </body>
</page>
