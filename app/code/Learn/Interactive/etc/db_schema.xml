<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="learn_interactive_color" resource="default" comment="Interactive Colors">

        <column xsi:type="int" name="color_id" identity="true" comment="Color ID"/>

        <column xsi:type="varchar" name="color"
                length="255"
                nullable="false"
                comment="Name Color" />

        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="color_id"/>
        </constraint>
    </table>
</schema>